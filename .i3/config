# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec ~/.i3/shutdown_menu

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Pulse Audio controls
bindsym F11 exec ~/.i3/audio/volume.sh down
bindsym F12 exec ~/.i3/audio/volume.sh up
bindsym XF86AudioMute exec ~/.i3/audio/volume.sh toggle

# Media player controls
bindsym F8 exec rhythmbox-client --previous
bindsym F9 exec rhythmbox-client --play-pause
bindsym F10 exec rhythmbox-client --next

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Make toggle touchpad button work
bindsym XF86TouchpadToggle exec ~/.i3/toggle_touchpad.sh

# Make sure touchpad palm rejection
exec_always "xinput set-prop 15 'Synaptics Palm Detection' 1"
exec_always "xinput set-prop 15 'Synaptics Palm Dimensions' 5, 5"

# Bind lockscreen to super+l
bindsym Mod4+l exec "~/.i3/i3lock-fancy/lock"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
		
		# Move the i3bar to the top
		position top
}

# Execute display layout scripts
exec_always "~/.screenlayout/home_dell.sh"

# Make capslock an additional escape key
exec_always "setxkbmap -option caps:escape"

# Use some gnome settings
exec gnome-settings-daemon

# Rice up the desktop with compton
exec_always compton -D 5 -f

